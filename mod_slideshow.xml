<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="2.5.0" client="site" method="upgrade">
    <!-- Name of the Module -->
    <name>Slideshow</name>
    <author>hVenus</author>
    <creationDate>2012-09-19</creationDate>
    <copyright>All rights reserved.</copyright>
    <license>BSD License</license>
    <authorEmail>mx_zhu@keysentence.com.cn</authorEmail>
    <authorUrl>www.fm618.com</authorUrl>
    <version>0.0.1</version>
    <description>前台图片滚动区块</description>
    <files>
        <filename module="mod_slideshow">mod_slideshow.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">en-GB.mod_slideshow.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="path_to_xml"
                        type="text"
                        default="slideshow/slideshow.xml"
                        label="XML文件路径"
                        description="用于配置slideshow的XML文件。文件格式参见模块内说明文件。" />
                <field
                        name="slideshow_width"
                        type="text"
                        size="6"
                        default="320"
                        label="宽度"
                        description="设置slideshow区域的宽度。" />
                <field
                        name="slideshow_height"
                        type="text"
                        size="6"
                        default="240"
                        label="高度"
                        description="设置slideshow区域的高度" />
                <field
                        name="url_target"
                        type="list"
                        default="_blank"
                        label="链接打开的方式"
                        description="链接的打开方式。">
                    <option value="_blank">新页面</option>
                    <option value="_self">当前页面</option>
                </field>
            </fieldset>
        </fields>
    </config>

</install>